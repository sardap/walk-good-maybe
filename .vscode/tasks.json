	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-rom",
			"type": "shell",
			"command": "docker run --rm -v ${PWD}:/app wgm-builder:latest",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "clean-rom",
			"type": "shell",
			"command": "docker run --rm -v ${PWD}:/app wgm-builder:latest clean",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "build-docker",
			"type": "shell",
			"command": "docker build . -t wgm-builder:latest",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		}

	]
}
